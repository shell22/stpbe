<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhuanjingkj.stpbe.tmdp.mapper.DkRtvrVtMapper">
    <resultMap type ="com.zhuanjingkj.stpbe.tmdp.dto.DkMvtsDTO" id ="mvtsDTO">
        <result column="wzlx" property="name" jdbcType="VARCHAR"/>
        <result column="count" property="count" jdbcType="INTEGER"/>
    </resultMap>

    <select id ="getMvtss" resultMap ="mvtsDTO">
        SELECT wzlx, COUNT(violation_id) AS count
          FROM t_violation
      GROUP BY wzlx
    </select>
</mapper>